<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_wizard_import_partner" model="ir.ui.view">
            <field name="name">Form wizard</field>
            <field name="model">import.partner.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group name="main">
                            <field name="fields_csv"/>
                    </group>
                 
                    <footer>
                        <button string="Importx" name="action_go" type="object"
                                class="btn-primary"/>
                         <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_import_csv" model="ir.actions.act_window">
            <field name="name">Import Csv</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.partner.wizard</field>
            <field name="view_mode">form</field>
             <field name="target">new</field>
            
        </record>

        <menuitem
        id="import_csv_menu"
        name="Import csv"
        parent="contacts.menu_contacts"
        action="action_view_import_csv"
        />
        

  





    </data>
</odoo>





